import (
	. "github.com/onsi/ginkgo"
	. "github.com/onsi/gomega"

  {{range .DefaultImports}}{{printf "%q" .}}
  {{end}}
  {{range $key, $value := .Imports}}{{$key}} {{ printf "%q" $value}}
  {{end}}
)

var _ = Describe("#ping", func() {
	var (
		pingData   string
		pingResult bool
		pingErr    error
	)

	Context("when pings succeed", func() {
		BeforeEach(func() {
			pingData = "Hello"
			pingErr = nil
			pingResult = true
		})

		It("pings with pingData and gets it back", func() {
			//Do ping
			Expect(pingErr).ToNot(HaveOccurred())
			Expect(pingResult).To(BeTrue())
			Expect(pingData).To(Equal("Hello"))
		})
	})

	Context("when pings fail", func() {
		BeforeEach(func() {
			pingErr = nil
			pingResult = false
		})

		It("fails to pings with pingData", func() {
			//Do ping
			Expect(pingErr).ToNot(HaveOccurred())
			Expect(pingResult).To(BeFalse())
		})
	})
})
